<Window x:Class="Zunify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zunify" Height="150" Width="500" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Row="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Selected Playlist:" HorizontalAlignment="Center"  VerticalAlignment="Center" />
            <Label Grid.Column="1" Name="SelectedPlaylistLabel" VerticalAlignment="Center" />
        </Grid>
        
        <Button Grid.Row="1" Grid.Column="0" Click="ChoosePlaylistClick" Margin="12">
            <Label Content="Choose Playlist" />
        </Button>
        <Button Grid.Row="1" Grid.Column="1" Click="ParseAndSaveClick" Margin="12">
            <Label Content="Parse and Save" />
        </Button>
    </Grid>
</Window>
